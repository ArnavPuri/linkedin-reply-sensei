{
    "manifest_version": 3,
    "name": "LinkedIn Reply Suggester",
    "version": "1.0",
    "description": "Suggests replies for LinkedIn posts using ChatGPT API",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/logo.png",
        "48": "images/logo.png",
        "128": "images/logo.png"
      }
    }
  }
  